@model BilgiTekIzinTakip.Entities.Mudurluk

@{
    ViewBag.Title = "Müdürlük";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Müdürlük Ekle</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group row">
        <label class="col-md-3 m-t-15">Başkanlık Seç</label>
        @Html.LabelFor(model=>model.BaskanlikId,"",htmlAttributes:new { @class="control-label col-md-2"})
        @Html.DropDownList("BaskanlikId",null,htmlAttributes:new { @class="control-label col-md-2"})
    </div>


    <div class="form-group">
        <label class="col-md-3 m-t-15">Müdürlük İsmi</label>
     
        <div class="col-md-10">
            @Html.EditorFor(model => model.Isim, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Ekle</button>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
